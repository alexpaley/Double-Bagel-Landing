.logo
    height: 20%
    border-radius: 50%
    +below(740px)
        display: none
        height: 10%
.title
    color: white
    font-weight: normal
    text-align: center
    font-size: 2em
    +below(740px)
        font-size: 1.25em
    +below(320px)
        font-size: 1em
.phone-container
    width: 50%
    float: left
    .iphone
        height: auto
        width: 100%
    +below(740px)
        width: 100%
        text-align: center
        margin-bottom: 10px
.download-social-container
    width: 50%
    float: left
    margin-top: 25%
    .download-container
        width: 100%
        text-align: center
        .appstore-icon
            width: 300px
            border-radius: 5px
            +below(740px)
                width: 200px
            +below(320px)
                width: 150px
    .social-icon-container
        width: 100%
        margin-top: 10px
        text-align: center
        .social-icon
            display: inline-block
            font-size: 3em !important
            color: white
            margin-right: 30px
            +below(320px)
                font-size: 2.5em !important
    +below(740px)
        width: 100%
        margin-top: 0
        text-align: center
